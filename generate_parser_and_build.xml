<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project unit_test_generator with libraries in sub-folder">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->

   <delete file="src/de/uniwue/info2/parser/DSLParser.java"/>
   <delete file="src/de/uniwue/info2/parser/DSLParserConstants.java"/>
   <delete file="src/de/uniwue/info2/parser/DSLParserTokenManager.java"/>

   <property name="lib.dir" value="lib"/>
   <path id="classpath">
      <fileset dir="lib" includes="**/*.jar"/>
   </path>

   <javacc
	 target="src/de/uniwue/info2/parser/DSLParser.jj"
	 outputdirectory="src/de/uniwue/info2/parser/"
	 javacchome="files"
   />

    <target name="create_run_jar">
        <delete dir="bin"/>
        <mkdir dir="bin"/>
	<javac srcdir="src" destdir="bin" classpathref="classpath" includeantruntime="false" />
        <jar destfile="build/ia_gen.jar">
            <manifest>
                <attribute name="Main-Class" value="de.uniwue.info2.main.CommandLineInterpreter"/>
                <attribute name="Class-Path" value=". ia_gen_lib/commons-cli-1.2.jar ia_gen_lib/commons-lang-2.5.jar"/>
            </manifest>
            <fileset dir="bin"/>
        </jar>

        <delete dir="build/ia_gen_lib"/>
        <mkdir dir="build/ia_gen_lib"/>
        <copy file="lib/commons-cli-1.2.jar" todir="build/ia_gen_lib"/>
        <copy file="lib/commons-lang-2.5.jar" todir="build/ia_gen_lib"/>
    </target>
</project>
